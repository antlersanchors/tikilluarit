<!-- ACCOMMODATION -->
<category>
	<pattern>* HOUSING</pattern>
	<template>Do you have housing?</template>
</category>

<category>
	<pattern>YES</pattern>
	<that>DO YOU HAVE HOUSING</that>
	<template>That’s good. Do you like where you live?
		<think><set name="has_housing">yes</set></think></template>
</category>

<category>
	<pattern>NO</pattern>
	<that>DO YOU HAVE HOUSING</that>
	<template>I’m sorry, that must be stressful. 
		<think><set name="has_housing">no</set></think></template>
</category>



